   "sections": [
      {
         "name": "About",
         "file": "about.blade.php",
         "schema": ["label","phone"]
      },
      {
         "name": "Services",
         "image": "base64......"
      },
      {
         "name": "Portfolio"
      },
      {
         "name": "Contact"
      },
      {
         "name": "Advantages",
         "schema": [
            {
               "name": "modules",
               "type": "array",
               "schema": [
                  "name",
                  "description"
               ]
            }
         ]
      },
      {
         "name": "reviews",
         "schema": [
            {
               "name": "reviews",
               "type": "array",
               "keys": [
                  "name",
                  "description",
                  "image"
               ]
            },
            "pages",
            {
               "name": "posts",
               "length": 3,
               "required": false
            }
         ]
      }
   ],
   "defaultVariables": [
